<!DOCTYPE html>
<html>
  <head>
    <title>DemoCicd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
      }

      h1 {
        text-align: center;
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <h1>
      <%= yield %>
    </h1>
  </body>
</html>
